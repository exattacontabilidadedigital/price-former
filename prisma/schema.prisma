// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}
datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}


model Product {
  id          String   @id @default(uuid())
  name        String
  ncm         String?
  costPrice   Float    // Custo do Produto
  markup      Float?   // Markup calculado
  salesPrice  Float?   // Preço de Venda Sugerido
  icms        Float?
  icmsPurchase Float? // ICMS sobre a compra
  ipi         Float?
  ipiPurchase Float? // IPI sobre a compra
  freight     Float?
  others      Float?   // Outros Custos
  pis         Float?
  cofins      Float?
  cpp         Float?
  issqn       Float?
  csll        Float?
  irpj        Float?
  taxOthers   Float?   // Outros Impostos
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Expense {
  id          String   @id @default(uuid())
  description String
  value       Float
  type        String   // "FIXED" or "VARIABLE"
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Tax {
  id          String   @id @default(uuid())
  name        String
  rate        Float    // Alíquota (%)
  type        String   @default("OTHERS") // ICMS, PIS, COFINS, CPP, ISSQN, CSLL, IRPJ, OTHERS
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Revenue {
  id          String   @id @default(uuid())
  value       Float
  period      String   // "MONTHLY" or "ANNUAL"
  date        DateTime @default(now()) // Data de inclusão
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model User {
  id            String    @id @default(uuid())
  name          String?
  email         String    @unique
  password      String
  role          String    @default("USER") // ADMIN, USER
  companyId     String?
  company       Company?  @relation(fields: [companyId], references: [id])
  notifications Notification[]
  calculations  Calculation[]
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model Company {
  id          String   @id @default(uuid())
  name        String
  fantasyName String?
  cnpj        String?
  address     String?
  logoUrl     String?
  users       User[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Notification {
  id        String   @id @default(uuid())
  title     String
  message   String
  read      Boolean  @default(false)
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())
}

model Calculation {
  id                  String   @id @default(uuid())
  calculationName     String?  // Nome do cálculo/cenário
  productId           String?
  productName         String
  costPrice           Float
  markup              Float
  suggestedPrice      Float
  totalCosts          Float
  totalTaxes          Float
  profitMargin        Float    // Margem de lucro calculada
  desiredProfitMargin Float?   // Lucro desejado pelo usuário
  // Dados detalhados dos cálculos
  icms                Float    @default(0)
  ipi                 Float    @default(0)
  freight             Float    @default(0)
  otherCosts          Float    @default(0)
  pis                 Float    @default(0)
  cofins              Float    @default(0)
  cpp                 Float    @default(0)
  issqn               Float    @default(0)
  csll                Float    @default(0)
  irpj                Float    @default(0)
  taxOthers           Float    @default(0)
  // Dados de auditoria
  userId          String?
  user            User?    @relation(fields: [userId], references: [id], onDelete: SetNull)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}
